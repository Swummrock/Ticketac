              <body>
                <nav class=" header navbar navbar-light bg-dark">
                    <div class="logo"> <img src="../images/train.png" width="40px"><span id="namelogo"> Ticketac </span></div>
                        
                        <ul class="navbar">
                            <a class="log" href="#">Connexion</a>
                            <a class="my_last" href="#">My last trips</a>
                        </ul>
               </nav> 

   <!-- GRID -->
   <div class="container">
        
            <div class="row page2-center">
                <div class="col-12 col-sm-6 padding">
                    <h2>One way ticket</h2>
                    <!--New City section-->
                    <form action="#" method="POST">
                        <div class="input-group ">
                            <input name="" type="text" class="form-control" placeholder="From: Paris, Marseille" aria-label="new city name">
                            <input name="" type="text" class="form-control" placeholder="To: Paris, Marseille" aria-label="new city name">
                            <input name="" type="date" class="form-control" placeholder="Choisir une date" value="" aria-label="new city name">

                            <div class="input-group-append">
                            <button class="btn btn-warning" type="submit" id="button-addon2">Go</button>
                            </div>
                        </div>
                    </form>
                </div>

                <img src="../images/landmark.png" width="300px">
            </div>
            
            
   </div>

   
    
